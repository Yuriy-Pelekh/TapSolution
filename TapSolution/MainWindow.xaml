<Window x:Class="TapSolution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas Name="canvas" IsHitTestVisible="False">
            <Line Name="line" Stroke="Black" X1="10" X2="10" Y1="250" Y2="10" IsHitTestVisible="False" />
        </Canvas>
        <Button Content="Run" Height="23" Width="75" Margin="5" Grid.Row="1" HorizontalAlignment="Right" Click="ButtonRunClick" />
    </Grid>
</Window>
